check process riemann-health
  with pidfile /var/vcap/sys/run/riemann-emitter/riemann-health.pid
  start program "/var/vcap/jobs/riemann-emitter/bin/riemann-health_ctl start"
  stop program "/var/vcap/jobs/riemann-emitter/bin/riemann-health_ctl stop"
  group vcap

check process riemann-net
  with pidfile /var/vcap/sys/run/riemann-emitter/riemann-net.pid
  start program "/var/vcap/jobs/riemann-emitter/bin/riemann-net_ctl start"
  stop program "/var/vcap/jobs/riemann-emitter/bin/riemann-net_ctl stop"
  group vcap

